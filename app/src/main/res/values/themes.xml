<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>
        <item name="android:windowBackground">@color/Deep_Koamaru</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/Vazirmatn_Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextSize||fontMedium-->
    <style name="TextAppearance_medium">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/Vazirmatn_Medium.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontSmall-Regular-->
    <style name="TextAppearance_small">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/Vazirmatn_Regular.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--Pink material button-->
    <style name="pinkMaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/Cerise_Pink</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconStartPadding">@dimen/_6mdp</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:inset">0dp</item>
    </style>
    <!--MaterialDialog-->
    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeDialog</item>
    </style>

    <style name="ShapeDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>
    <!--Shaped images-->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--Tab layout-->
    <style name="TabLayoutFontNormal" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/vazirmatn_regular</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>

    <style name="TabLayoutFontBold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/vazirmatn_bold</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Colored shadows-->
    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/royalBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/royalBlue</item>
    </style>
    <!--Bottom sheet dialog-->
    <style name="RemoveDialogBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
    <!--Colored shadow-->
    <style name="ColoredShadowLight">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/cornflowerBlue
        </item>
    </style>
    <!--style MaterialDialog-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSecondary">@color/Cerise_Pink</item>
        <item name="elevationOverlayEnabled">false</item>

    </style>
    <!--AppCompatRatingBar-->
    <style name="myRateBar" parent="Widget.AppCompat.RatingBar">
        <!--non select star color-->
        <item name="android:colorControlNormal">#4D000000</item>
        <!--select star color-->
        <item name="colorControlActivated">@color/yellow</item>
    </style>
</resources>
